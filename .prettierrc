{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "bracketSpacing": true,
        "printWidth": 99,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false
      }
    },
    {
      "files": "*.{ts,js,json}",
      "options": {
        "bracketSpacing": true,
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
      }
    }
  ]
}